<Window x:Class="ManagementStudio.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementStudio"
        xmlns:userControls="clr-namespace:ManagementStudio.UserControls"
        mc:Ignorable="d"
        Title="Login" Height="479" Width="292" Background="Azure" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="100"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <userControls:ClearableTextBox x:Name="ctbUsername" Grid.Row="1" Width="250" Height="40" Hint="Username" Foreground="White"/>
        <userControls:ClearablePasswordBox x:Name="ctbPassword" Grid.Row="2" Width="250" Height="40" Hint="Password"/>
        <Button x:Name="btnLogin" Grid.Row="4" Height="30" Width="110" HorizontalAlignment="Left" Content="Login" Margin="161,0,0,0" VerticalAlignment="Center" Click="btnLogin_Click"/>
    </Grid>
</Window>
