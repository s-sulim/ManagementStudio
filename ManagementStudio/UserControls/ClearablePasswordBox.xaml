<UserControl x:Class="ManagementStudio.UserControls.ClearablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementStudio.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">
    <Grid>

        <TextBlock Name="tbHint" FontSize="16" FontWeight="Light" Foreground="DarkGray" Text="Type here..." VerticalAlignment="Center" Margin="5,0,0,0"/>
        <PasswordBox Name ="tbInput" VerticalContentAlignment="Center" FontSize="16" FontWeight="Light" Background="Transparent"  PasswordChanged="tbInput_PasswordChanged" />
        <Button Name ="btnClear" Width="30" HorizontalAlignment="Right" Background="Transparent" Foreground="LightGray" BorderThickness="0" Content="X" Click="btnClear_Click"/>
    </Grid>
</UserControl>
